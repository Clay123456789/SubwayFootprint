<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A4A7AA"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout style="@style/wrap_layout"
            android:layout_marginTop="200dp">


            <!-- 分割线 -->
            <View style="@style/bg_line"/>
            <!-- 无圆角-->
            <LinearLayout style="@style/top_layout">
                <TextView style="@style/usertext" android:text="旧密码" />

                <EditText
                    android:id="@+id/edit_oldpassword"
                    android:paddingRight="10dp"
                    android:hint="请输入旧密码"
                    android:layout_height="wrap_content"
                    android:layout_width="200dp"
                    android:background="#FFFFFF"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/calibri"
                    android:maxLines="2"
                    android:textColor="@color/text_clo"
                    android:textSize="16sp" />

            </LinearLayout>


            <!-- 无圆角-->
            <View style="@style/bg_line"/>
            <!-- 下圆角-->
            <LinearLayout style="@style/mid_layout">
                <TextView style="@style/usertext" android:text="新密码" />
                <EditText
                    android:id="@+id/edit_newpassword"
                    android:paddingRight="10dp"
                    android:hint="请输入新密码"
                    android:layout_height="wrap_content"
                    android:layout_width="200dp"
                    android:background="#FFFFFF"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/calibri"
                    android:maxLines="2"
                    android:textColor="@color/text_clo"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- 分割线 -->
            <View style="@style/bg_line"/>
            <!-- 下圆角-->
            <LinearLayout style="@style/bottom_layout">
                <TextView style="@style/usertext" android:text="确认新密码"/>
                <EditText
                    android:id="@+id/edit_newpassword1"
                    android:paddingRight="10dp"
                    android:hint="请再次输入新密码"
                    android:layout_height="wrap_content"
                    android:layout_width="200dp"
                    android:background="#FFFFFF"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/calibri"
                    android:maxLines="2"
                    android:textColor="@color/text_clo"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
        <!-- 全圆角-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/password_cancel"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/buttonshapewhitebg"
                android:fontFamily="@font/calibri"
                android:text="取消"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/password_confirm"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"

                android:background="@drawable/buttonshaperedbg"
                android:fontFamily="@font/calibri"
                android:text="确认修改"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


</ScrollView>