<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F3F6"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="#FFFFFF"
        android:gravity="left|center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="106dp"
            android:layout_height="29dp"
            android:fontFamily="@font/calibri"
            android:gravity="center"
            android:text="个人中心 "
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout style="@style/wrap_layout" >
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout">
            <TextView style="@style/usertext" android:text="头像"
                android:onClick="chose_header_picture"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/Head_imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="chose_header_picture"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_round"
                android:text="name"
                app:riv_oval="true" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>
            <ImageView style="@style/img_arrow"
                android:onClick="chose_header_picture"/>
        </LinearLayout>

        <!-- 分割线 -->
        <View style="@style/bg_line"/>
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout">
            <TextView style="@style/usertext" android:text="账号" />
            <TextView android:id="@+id/account"
                android:text="11111111111"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
        </LinearLayout>


        <!-- 分割线 -->
        <View style="@style/bg_line"/>
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout">
            <TextView style="@style/usertext" android:text="昵称"
                android:onClick="alert_edit1"/>
            <TextView
                android:id="@+id/username"
                android:paddingRight="16dp"
                android:text="name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:onClick="alert_edit1"/>
            <ImageView style="@style/img_arrow"
                android:onClick="alert_edit1"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">
            <TextView style="@style/usertext" android:text="格言"
                android:onClick="alert_edit2"/>
            <TextView android:id="@+id/motto"
                android:paddingRight="10dp"
                android:text="JUST BE COOL!"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:onClick="alert_edit2"/>
            <ImageView style="@style/img_arrow"
                android:onClick="alert_edit2"
                />
        </LinearLayout>


    </LinearLayout>
    <!-- 全圆角-->
    <LinearLayout style="@style/wrap_layout">
        <LinearLayout style="@style/single_layout">
            <TextView style="@style/usertext"
                android:gravity="center|center_horizontal" android:text="保存设置"
                android:onClick="SAVE"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>