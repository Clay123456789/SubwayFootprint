<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A4A7AA"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout style="@style/wrap_layout" >
            <!-- 上圆角-->
            <LinearLayout style="@style/top_layout">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/Head_imageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:onClick="chose_header_picture"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher_round"
                    android:text="name"
                    app:riv_oval="true"
                    tools:ignore="SpeakableTextPresentCheck" />

                <LinearLayout
                    style="@style/mid_layout"
                    android:layout_width="150dp">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text="昵称:"
                        android:textColor="@color/text_clo" />

                    <EditText
                        android:id="@+id/edit_username"
                        android:paddingRight="10dp"
                        android:text="NULL"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:background="#FFFFFF"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/calibri"
                        android:maxLines="1"
                        android:textColor="@color/text_clo"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>

            <!-- 分割线 -->
            <View style="@style/bg_line"/>
            <!-- 无圆角-->
            <LinearLayout style="@style/mid_layout">
                <TextView style="@style/usertext" android:text="签名" />

                    <EditText
                        android:id="@+id/edit_qianming"
                        android:paddingRight="10dp"
                        android:text="NULL"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:background="#FFFFFF"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/calibri"
                        android:maxLines="2"
                        android:textColor="@color/text_clo"
                        android:textSize="16sp" />

            </LinearLayout>


            <!-- 无圆角-->
            <View style="@style/bg_line"/>
            <!-- 下圆角-->
            <LinearLayout style="@style/mid_layout">
                <TextView style="@style/usertext" android:text="性别" />
                <EditText
                    android:id="@+id/edit_sex"
                    android:paddingRight="10dp"
                    android:text="NULL"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="#FFFFFF"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/calibri"
                    android:maxLines="1"
                    android:textColor="@color/text_clo"
                    android:textSize="16sp" />

                <ImageView
                    style="@style/img_arrow"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <!-- 分割线 -->
            <View style="@style/bg_line"/>
            <!-- 下圆角-->
            <LinearLayout style="@style/mid_layout">
                <TextView style="@style/usertext" android:text="电话"
                    />
                <EditText
                    android:id="@+id/edit_tele"
                    android:paddingRight="10dp"
                    android:text="NULL"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="#FFFFFF"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/calibri"
                    android:maxLines="1"
                    android:textColor="@color/text_clo"
                    android:textSize="16sp" />

                <ImageView
                    style="@style/img_arrow"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>



            <!-- 分割线 -->
            <View style="@style/bg_line"/>
            <!-- 下圆角-->
            <LinearLayout style="@style/bottom_layout">
                <TextView style="@style/usertext" android:text="年龄"/>
                <EditText
                    android:id="@+id/edit_age"
                    android:paddingRight="10dp"
                    android:text="NULL"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="#FFFFFF"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/calibri"
                    android:maxLines="1"
                    android:textColor="@color/text_clo"
                    android:textSize="16sp" />

                <ImageView
                    style="@style/img_arrow"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>
        </LinearLayout>
        <!-- 全圆角-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/persona_cancel"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:background="@drawable/buttonshapewhitebg"
                android:fontFamily="@font/calibri"
                android:text="取消"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/persona_confirm"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"

                android:background="@drawable/buttonshaperedbg"
                android:fontFamily="@font/calibri"
                android:text="确认修改"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


</ScrollView>